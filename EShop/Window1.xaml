<Window x:Class="EShop.loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EShop"
        mc:Ignorable="d"
        Title="login" Height="172" Width="233">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />

            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock><Run Text="Введите "/><Run Language="ru-ru" Text="логин и "/><Run Text="пароль:"/></TextBlock>
        <TextBox Name="passwordBox" Grid.Row="2" MinWidth="100">password</TextBox>
        <TextBox Name="loginBox" Grid.Row="1" MinWidth="100">login</TextBox>

        <WrapPanel Grid.Row="3" HorizontalAlignment="Right" Margin="0,15,0,0" Width="130">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
        </WrapPanel>
    </Grid>
</Window>
