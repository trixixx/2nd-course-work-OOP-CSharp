<Window x:Class="EShop.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EShop"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="Total" HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="42" Width="148"/>

        <TextBox Name="Adress" HorizontalAlignment="Center" Margin="0,243,0,0" TextWrapping="Wrap" Text="Adress" VerticalAlignment="Top" Width="316" Height="27"/>
        <TextBox x:Name="FullName" HorizontalAlignment="Center" Margin="0,317,0,0" TextWrapping="Wrap" Text="Full Name" VerticalAlignment="Top" Width="316" Height="27"/>
        <Button Content="Pay" Name="PayButton" HorizontalAlignment="Center" Margin="0,376,0,0" VerticalAlignment="Top" Height="36" Width="148" Click="PayButton_Click"/>


    </Grid>
</Window>
